<div class="container">
	<h1 class="center">Your Cash Offer: <%= number_to_currency(@phone.first.price) %></h1>
  <br>
	

	
<div class="row">
<div class="col-sm-4">
  <div class="center">
    Apple <%= @phone.first.model %> <%= @phone.first.capacity %>GB<br>
    (<%= @phone.first.carrier %>)
  </div>
  <img class="img-responsive photo" align="middle" src="https://upload.wikimedia.org/wikipedia/commons/f/fa/IPhone_5.png" alt="">
</div> 
<div class="col-sm-8"> 
<h3>Save your price and get paid</h3>		
<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          1. Please Enter your Email
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
        <%= form_for :sale, url: sale_create_path do |f| %>
         
            <%= f.email_field :email, class: "form-control", placeholder: 'Email', autofocus: true, required: true %>
          
        
        <button class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">Next</button>
          
     

      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingTwo">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo"> 
          2. Payment Information
       </a>
      </h4>
    </div>
    <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
      <div class="panel-body">
        Please enter your paypal email if different than above?<br>

       <%= f.email_field :paypal_email, class: "form-control", placeholder: 'PayPal Email', autofocus: true, required: true %>
       If you would prefer to be mailed a check check here: <%=f.check_box :terms_of_service %><br>
       <button class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree"> Next</button> 
      
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingThree">
      <h4 class="panel-title">
     
         3. Details
       
      </h4>
    </div>
    <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
      <div class="panel-body">
            

            <div class="col-sm-12">
          <div class="col-sm-12 payments">
            <div class="row">
                <%= f.text_field :first_name, class: "form-control", placeholder: 'First Name', autofocus: true, required: true %>
            </div>
          <div class="row">
            
                <%= f.text_field :last_name, class: "form-control", placeholder: 'Last Name', autofocus: true, required: true %>
          </div>
         
          <div class="row">
            
              <%= f.telephone_field :phone, type:"number", class: "form-control", placeholder: 'Phone', autofocus: true %>
           
          </div>
          <div class="row">
            
              <%= f.text_field :address, class: "form-control", placeholder: 'Address', autofocus: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-5">
              <%= f.text_field :city, class: "form-control", placeholder: 'City', autofocus: true %>
            </div>
            <div class="col-sm-7">
              <%= f.text_field :state, class: "form-control", placeholder: 'State', autofocus: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-5">
              <%= f.text_field :zipcode, type:"number", class: "form-control", placeholder: 'Zip Code', autofocus: true %>
            </div>
            <div class="col-sm-7">
              <%= f.text_field :country, class: "form-control", placeholder: 'Country', autofocus: true %>
            </div>
          </div>

          <%= f.hidden_field :product_id, :value => @phone.first.id %>
        <%=f.check_box :terms_of_service %>

        <%= f.submit "Sell my Phone", class: "btn btn-primary", id: "book-btn", type: "submit" %>  
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>