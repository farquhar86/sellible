<div class="container">
    <div class="row">
<%= bootstrap_flash %>
        <div class="col-sm-11">
            <h1 class="page-header">Sales Dashboard!</h1>
        </div>
        <div class="col-sm-1">
        	<%= link_to "Products", product_index_path, class: "btn btn-default btn-lg fa fa-linkedin fa-fw network-name", :method => :get%>
        </div>	
        <div class="col-sm-1">
        	<%= button_to "Log Out", "/sign_out" %>
        </div>	
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="panel panel-primary custom-panel">
                <div class="panel-heading"> 
                    <div class="row"> 
                        <div class="col-xs-12 text-right">
                            <div id="numberReceivers" class="huge"></div>
                            <div>All Orders Created <%= @sales.length %></div>
                        </div>
                    </div>
                </div>
                    <div class="panel-footer">
                        
                        <div class="table-responsive">
                          
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </div>
            </div>
        </div>
     
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                       
                        <div class="col-xs-12 text-right">
                            <div>States we have shipped</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <div class="table-responsive">
                            
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        
    </div>
<!-- second row -->
     <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="panel panel-primary custom-panel">
                <div class="panel-heading"> 
                    <div class="row"> 
                        <div class="col-xs-12 text-right">
                            <div id="numberReceivers" class="huge"></div>
                            <div>All Orders <%= @sales.length %></div>
                        </div>
                    </div>
                </div>
                    <div class="panel-footer">
                        
                        <div class="table-responsive">
                          
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </div>
            </div>
        </div>
     
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                       
                        <div class="col-xs-12 text-right">
                            <div>States we have shipped</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <div class="table-responsive">
                            
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <!-- /.panel -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i>Orders Places</i>
                    <div class="pull-right">
                        <div class="dropdown">
                            <div class="btn-group">
                                
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                    <li><a href="#">Shipped</a>
                                    </li>
                                    <li><a href="#">Needs to Ship</a>
                                    </li>
                                    <li><a href="#">Something else here</a>
                                    </li>
                                    <li class="divider"></li>
                                    <li><a href="#">Separated link</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-striped">
                                    <thead>
                                        <tr>
                                            
                                            <th>Order#</th>
                                            <th>Email</th>
                                            <th>Order Date</th>
                                            <th>Price</th>
                                            <th>Name</th>
                                            <th>Street</th>
                                            <th>City</th>
                                            <th>State</th>
                                            <th>Country</th>
                                            <th>Zip</th>
                                            <th>Shipped</th>
                                            <th>Arrived</th>
                                            <th>Paid</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @sales.each do |sale| %>
                                        <tr>     
                                            
                                           
                                            <td><%= sale.id %></td>
                                            <td><%= sale.email %></td>
                                            <td><%= sale.created_at%></td>
                                            <td><%= sale.product_id %></td>
                                            <td><%= sale.first_name %> <%= sale.last_name %></td>
                                            <td><%= sale.address %></td>
                                            <td><%= sale.city %></td>
                                            <td><%= sale.state %></td>
                                            <td><%= sale.country %></td>
                                            <td><%= sale.zipcode %></td>
                                            <td> 
                                                <% if sale.phone_shipped %>
                                                    <%= sale.phone_shipped %>
                                                <% else %>    
                                                    <%= button_to "Shipped", update_sale_path(sale, :shipped => true), :method => "post", class: "shipped"%>
                                                <%end%>
                                                                                    
                                             </td>
                                             <td>
                                                 <% if sale.phone_arrived %>
                                                    <%= sale.phone_arrived %>
                                                 <% else %>   
                                                    <%= button_to "Arrived", update_sale_path(sale, :arrived => true), :method => "post", class: "shipped"%>
                                                 <%end%>
                                                                              

                                             <td> 
                                                <% if sale.sale_paid %>
                                                   <%= sale.sale_paid %>
                                                <% else %>  
                                                    <%= button_to "Paid", update_sale_path(sale, :paid => true), :method => "post", class: "shipped"%></td>
                                                <%end%>
                                             <td> <%= link_to "Delete", delete_sale_path(sale), method: :delete %><br></td>
                                            
                                        </tr>
                                        <%end%>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.col-lg-4 (nested) -->
                        <div class="col-lg-12">
                            <div id="morris-bar-chart"></div>
                        </div>
                        <!-- /.col-lg-8 (nested) -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
                <!-- /.panel-footer -->
            </div>
            <!-- /.panel .chat-panel -->
        </div>
        <!-- /.col-lg-4 -->
     
    </div>
    <!-- /.row -->
</div>
