                            	       		<%= select(:carrier, :city_id, [['ATT', "ATT"], ['Verizon', "Verizon"], ["T-Mobile", "T-Mobile"], ['Sprint', "Sprint"], ["Other Carrier", "Other Carrier"]], {}, {:class => 'dropdown_menu'}) %><br>

                            	       	    <%= form.text_area :capacity, :required => true, placeholder: "Any cool destinations on this planet?", size: "100x10", class: "input_field2" %> <br>
                            	       	    <br>
                            	         		<%= form.submit "Create!", :class => 'submit_button' %>
                            	       	<% end %> 
                            	      </div>
                            	      <div class="modal-footer">
                            	        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            	        <button type="button" class="btn btn-primary">Save changes</button>
                            	      </div>
                            	    </div>
                            	  </div>
                            	</div>
                            </div>
