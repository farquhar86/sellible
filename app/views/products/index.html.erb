                        <div class="dropdown">
                            <div class="btn-group">
	                            <button type="button" class="btn btn-default btn-xs" data-toggle="modal" data-target="#myModal">
	                                Add Phone
	                                <span class="glyphicon glyphicon-plus"></span>
	                            </button>
